{
  "manifest_version": 2,

  "name": "Caption reporter",
  "description": "Report videos without captions to the FCC",
  "version": "1.0",
  "background": {
       "scripts": ["background.js"],
       "persistent": false
     },
  "permissions":
    ["tabs"]
  ,
  "page_action": {
  "default_icon": "caption.png",
  "default_popup": "popup.html",
  "default_title": "Report page"
  }

}